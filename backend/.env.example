# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/video_extract_pro
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/video_extract_pro

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# LLM Configuration
LLM_PROVIDER=anthropic
CLAUDE_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4-turbo-preview

# Hugging Face (for pyannote models)
HF_TOKEN=your-huggingface-token

# Storage paths
STORAGE_PATH=./storage
VIDEO_STORAGE_PATH=./storage/videos
CLIP_STORAGE_PATH=./storage/clips
CACHE_PATH=./storage/cache

# ML Model settings
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16
YOLO_MODEL=yolov8x.pt

# Processing settings
MAX_VIDEO_SIZE_MB=2000
MAX_VIDEO_DURATION_MINUTES=180
ANALYSIS_TIMEOUT_SECONDS=3600

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:5500"]
